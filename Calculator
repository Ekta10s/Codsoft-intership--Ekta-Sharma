class calculator:
    def addition(self):
        print(a + b)
    def subtraction(self):
        print(a- y)
    def multiplication(self):
        print(a * b)
    def division(self):
        print(a / b)
a = int(input("Enter first number:"))
b = int(input("Enter second number:"))
calc = calculator()
choice = 1
while choice !=0:
    print("1. ADDITION")
    print("2. SUBTRACTION")
    print("3. MULTIPLICATION")
    print("4. DIVISION")
    choice = int(input("Enter your choice:"))
    if choice == 1:
        print(calc.addition())
    elif choice == 2:
        print(calc.subtraction())
    elif choice == 3:
        print(calc.multiplication())
    elif choice == 4:
        print(calc.division())
    else:
        print("Invalid choice")
